  { -- case |c| ‚â§ 1
    obtain ‚ü®h1c, hc1‚ü© : -1 ‚â§ c ‚àß c ‚â§ 1 := abs_le.mp h,
    interval_cases c; tauto },
  { -- case 2 ‚â§ |c|
    exfalso,
    have : 2^4 ‚â§ c^4,
    { refine pow_four_le_pow_four _,
      convert h using 1, },
    have : (2:‚Ñù)^4 ‚â§ c^4,
    { norm_cast,
      convert this using 1, },
    have := (div_lt_div_iff _ _).mp hc‚ÇÅ,
    repeat {linarith}, },
end

