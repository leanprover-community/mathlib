  change ((g : SL(2, ‚Ñ§)) ‚Ä¢ z).re = (lc_row0 p ‚Üë(‚Üëg : SL(2, ‚Ñù))) / (p 0 ^ 2 + p 1 ^ 2)
  + (((p 1:‚ÑÇ )* z - p 0) / ((p 0 ^ 2 + p 1 ^ 2) * (p 0 * z + p 1))).re,
  exact_mod_cast (congr_arg complex.re (smul_eq_lc_row0_add hp z g.2))
end

