  gauge s (r ‚Ä¢ x) = abs r ‚Ä¢ gauge s x :=
begin
  rw ‚Üêgauge_smul_of_nonneg (abs_nonneg r),
  obtain h | h := abs_choice r,
  { rw h },
  { rw [h, neg_smul, gauge_neg symmetric] },
