lemma balanced.add (hA‚ÇÅ : balanced ùïú A) (hA‚ÇÇ : balanced ùïú B) : balanced ùïú (A + B) :=
begin
  rintro a ha _ ‚ü®_, ‚ü®x, y, hx, hy, rfl‚ü©, rfl‚ü©,
  rw smul_add,
  exact ‚ü®_, _, hA‚ÇÅ _ ha ‚ü®_, hx, rfl‚ü©, hA‚ÇÇ _ ha ‚ü®_, hy, rfl‚ü©, rfl‚ü©,
