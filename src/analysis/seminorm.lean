  { rintro hA x,
    obtain ‚ü®r, hr, hx‚ü© := hA x,
    exact ‚ü®r, hr.le, Œª a ha, hx a ha.le‚ü© },
  { rintro hA x,
    obtain ‚ü®r, hr, hx‚ü© := hA x,
    exact ‚ü®r + 1, add_pos_of_nonneg_of_pos hr zero_lt_one,
      Œª a ha, hx a ((lt_add_of_pos_right r zero_lt_one).trans_le ha)‚ü© }
end

