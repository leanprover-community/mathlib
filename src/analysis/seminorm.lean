begin
  apply (gauge_lt_one_subset_self hs ‚Äπ_‚Ä∫ $ absorbent_nhds_zero $ hs‚ÇÇ.mem_nhds zero_mem).antisymm,
  convert interior_subset_gauge_lt_one s,
