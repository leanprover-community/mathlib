@[simp]
lemma negligible_nsmul_iff (f : ‚Ñï ‚Üí ùïú) :
  negligible (Œª n, n ‚Ä¢ f n) ‚Üî negligible f :=
begin
  refine ‚ü®Œª h, _, Œª h, _‚ü©,
  {
    refine negligible_of_is_O h _,

    -- TODO: Not sure what extra assumptions would give this
    have hùïú : ‚àÉ (d : ‚Ñù) (hd : 0 < d), ‚àÄ (n : ‚Ñï) (hn : n ‚â† 0), d ‚â§ ‚à•(n : ùïú)‚à• := sorry,
    obtain ‚ü®d, hd0, hd‚ü© := hùïú,

    refine is_O.of_bound d‚Åª¬π _,
    rw filter.eventually_at_top,
    use 1,
    intros n hn,
    specialize hd n (by linarith),
    rw [nsmul_eq_mul, normed_field.norm_mul],
    calc ‚à•f n‚à• ‚â§ 1 * ‚à•f n‚à• : by rw one_mul
      ... ‚â§ (d‚Åª¬π * ‚à•(n : ùïú)‚à•) * ‚à•f n‚à• : begin
        refine mul_le_mul_of_nonneg_right _ (norm_nonneg (f n)),
        rw inv_eq_one_div,
        rw mul_comm (1 / d),
        rw ‚Üê mul_div_assoc,
        rw mul_one,
        rw le_div_iff hd0,
        rwa one_mul,
      end

      ... ‚â§ d‚Åª¬π * (‚à•(n : ùïú)‚à• * ‚à•f n‚à•) : by rw mul_assoc

  },
  { refine negligible_of_is_O_fpow_lt 0 (Œª c hc, _),
    specialize h (c - 1),
    have := is_O.mul (coe_nat_is_O_coe_nat ùïú) h,
    simp at this,
    simp [nsmul_eq_mul],
    refine this.trans _,
    refine is_O_of_le _ (Œª x, le_of_eq (congr_arg _ _)),
    by_cases hx : (x : ‚Ñù) = 0,
    { simp [hx, this],
      refine symm (zero_fpow c (ne_of_lt hc)) },
    calc (x : ‚Ñù) * ‚Üëx ^ (c - 1) = (‚Üëx ^ (1 : ‚Ñ§)) * (‚Üëx ^ (c - 1)) : by rw gpow_one
      ... = ‚Üëx ^ (1 + (c - 1)) : (fpow_add hx 1 (c - 1)).symm
      ... = ‚Üëx ^ c : congr_arg (Œª g, gpow g (x : ‚Ñù)) (by linarith)
  }
end

lemma negligible_coe_nat_mul_iff (f : ‚Ñï ‚Üí ùïú) :
  negligible (Œª n, (n : ùïú) * f n) ‚Üî negligible f :=
trans (by simp only [nsmul_eq_mul]) (negligible_nsmul_iff f)

@[simp]
lemma negligible_pow_nsmul_iff (f : ‚Ñï ‚Üí ùïú) (c : ‚Ñï) :
  negligible (Œª n, (n ^ c) ‚Ä¢ f n : ‚Ñï ‚Üí ùïú) ‚Üî negligible f :=
begin
  induction c with c hc,
  { simp [one_mul, pow_zero] },
  { refine iff.trans _ hc,
    simp only [pow_succ, mul_assoc, nsmul_eq_mul, nat.cast_mul, nat.cast_pow],
    simp_rw ‚Üê nsmul_eq_mul,
    exact negligible_nsmul_iff _ }
end

@[simp]
lemma negligible_pow_mul_iff (f : ‚Ñï ‚Üí ùïú) (c : ‚Ñï) :
  negligible (Œª n, ((n : ùïú) ^ c) * f n) ‚Üî negligible f :=
trans (by simp only [nsmul_eq_mul, nat.cast_pow]) (negligible_pow_nsmul_iff f c)

theorem negligable_polynomial_mul_iff (f : ‚Ñï ‚Üí ùïú)
  (p : polynomial ùïú) (hp0 : p ‚â† 0) :
  negligible (Œª n, (p.eval n) * f n) ‚Üî negligible f :=
begin
  refine ‚ü®Œª h, _, _‚ü©,
  { by_cases hp : 1 ‚â§ p.degree,
    { have : ‚àÄ·∂† (n : ‚Ñï) in filter.at_top, 1 ‚â§ ‚à•polynomial.eval ‚Üën p‚à• :=
        sorry,
        -- (comap_nat_coe_at_top ‚Ñù) ‚ñ∏ filter.eventually_comap' (poly_help hp 1),
      refine (negligible_of_eventually_le h $ filter.sets_of_superset _ this (Œª x hx, _)),
      simp only [normed_field.norm_mul, set.mem_set_of_eq] at ‚ä¢ hx,
      by_cases hfx : f x = 0,
      { simp only [hfx, norm_zero, mul_zero]},
      { refine (le_mul_iff_one_le_left (norm_pos_iff.2 hfx)).2 hx } },
    { replace hp : p.degree ‚â§ 0,
      { rw not_le at hp,
        contrapose! hp,
        rwa nat.with_bot.one_le_iff_zero_lt },
      have hp_C := polynomial.eq_C_of_degree_le_zero hp,
      have hpc0 : p.coeff 0 ‚â† 0 := Œª h, hp0 (hp_C.trans (by simp only [h, ring_hom.map_zero])),
      rw [hp_C] at h,
      simpa only [polynomial.eval_C, negligible_const_mul_iff_of_ne_zero _ hpc0] using h } },
  { refine Œª h, polynomial.induction_on' p (Œª p q hp hq, _) (Œª n x, _),
    { simpa [polynomial.eval_add, add_mul] using negligible_add hp hq },
    { simp only [negligible_const_mul_iff, mul_assoc x,
        negligible_pow_mul_iff, polynomial.eval_monomial],
      exact or.inr h, } }
end

