    exact hd _ Œ¥ hŒ¥‚ÇÅ hw, },
  suffices : ‚àÄ j, volume (s ‚à© I j) / volume (I j) = volume s / ennreal.of_real T,
  { simp_rw [this, tendsto_const_nhds_iff, ennreal.div_eq_one_iff hT‚ÇÅ ennreal.of_real_ne_top] at hd,
    exact hd, },
