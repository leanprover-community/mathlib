{ obj := Œª F, op F.unop,
  map := Œª F G Œ±, has_hom.hom.op
  { app := Œª X, (Œ±.app (op X)).unop,
    naturality' := Œª X Y f, has_hom.hom.op_inj $ (Œ±.naturality f.op).symm } }

