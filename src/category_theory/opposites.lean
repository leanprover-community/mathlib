protected definition op (F : C ‚•§ D) : C·µí·µñ ‚•§ D·µí·µñ :=
{ obj := Œª X, op (F.obj (unop X)),
  map := Œª X Y f, (F.map f.unop).op }

@[simps]
protected definition unop (F : C·µí·µñ ‚•§ D·µí·µñ) : C ‚•§ D :=
{ obj := Œª X, unop (F.obj (op X)),
  map := Œª X Y f, (F.map f.op).unop }

