definition op_hom : (C ‚•§ D)·µí·µñ ‚•§ (C·µí·µñ ‚•§ D·µí·µñ) :=
{ obj := Œª F, (unop F).op,
  map := Œª F G Œ±,
  { app := Œª X, (Œ±.unop.app (unop X)).op,
    naturality' := Œª X Y f, has_hom.hom.unop_inj (Œ±.unop.naturality f.unop).symm } }

