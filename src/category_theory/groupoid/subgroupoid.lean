  ‚àÄ {c d} (p : d ‚ü∂ c) {Œ≥ : c ‚ü∂ c} (hs : Œ≥ ‚àà S.arrows c c), (p ‚â´ Œ≥ ‚â´ (inv p)) ‚àà (S.arrows d d) :=
Œª c d p Œ≥ hs, by { convert Sn.conj (inv p) hs, simp, }

