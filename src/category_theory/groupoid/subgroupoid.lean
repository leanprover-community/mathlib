  function.injective (Œª (f : s ‚ü∂ t), (inclusion h).map f) :=
Œª ‚ü®f,hf‚ü© ‚ü®g,hg‚ü©, by { dsimp only [inclusion], simpa only [subtype.mk_eq_mk] using id }

