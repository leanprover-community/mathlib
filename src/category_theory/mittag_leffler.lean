lemma eventual_range_eq_range_precomp (f : i ‚ü∂ j) (g : j ‚ü∂ k)
  (h : F.eventual_range k = range (F.map g)) :
  F.eventual_range k = range (F.map $ f ‚â´ g) :=
begin
  apply subset_antisymm,
  { apply Inter‚ÇÇ_subset, },
