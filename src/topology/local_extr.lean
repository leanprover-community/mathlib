import order.filter.extr topology.continuous_on

/-! # Local extrema of functions on topological spaces

This file defines special versions of `is_*_filter f a l`, `*=min/max/extr`,
from `order/filter/extr` for two kinds of filters: `nhds_within` and `nhds`.

Most statements in this file repeat those from `order/filter/extr`, and are needed only to make
dot notation return output of a correct type instead of just `is_min/max_filter`.
-/

universes u v w x

variables {Œ± : Type u} {Œ≤ : Type v} {Œ≥ : Type w} {Œ¥ : Type x} [topological_space Œ±]

open set filter
open_locale topological_space

section preorder

variables [preorder Œ≤] [preorder Œ≥] (f : Œ± ‚Üí Œ≤) (a : Œ±) (s : set Œ±)

/-- `is_local_min_on f a s` means that `f a ‚â§ f x` for all `x ‚àà s` in some neighborhood of `a`. -/
def is_local_min_on := is_min_filter f a (nhds_within a s)

/-- `is_local_max_on f a s` means that `f x ‚â§ f a` for all `x ‚àà s` in some neighborhood of `a`. -/
def is_local_max_on := is_max_filter f a (nhds_within a s)

/-- `is_local_extr_on f a s` means `is_local_min_on f a s ‚à® is_local_max_on f a s`. -/
def is_local_extr_on := is_extr_filter f a (nhds_within a s)

/-- `is_local_min f a` means that `f a ‚â§ f x` for all `x` in some neighborhood of `a`. -/
def is_local_min := is_min_filter f a (ùìù a)

/-- `is_local_max f a` means that `f x ‚â§ f a` for all `x ‚àà s` in some neighborhood of `a`. -/
def is_local_max := is_max_filter f a (ùìù a)

/-- `is_local_extr_on f a s` means `is_local_min_on f a s ‚à® is_local_max_on f a s`. -/
def is_local_extr := is_extr_filter f a (ùìù a)

variables {f a s}

lemma is_local_extr_on.elim {p : Prop} :
  is_local_extr_on f a s ‚Üí (is_local_min_on f a s ‚Üí p) ‚Üí (is_local_max_on f a s ‚Üí p) ‚Üí p :=
or.elim

lemma is_local_extr.elim {p : Prop} :
  is_local_extr f a ‚Üí (is_local_min f a ‚Üí p) ‚Üí (is_local_max f a ‚Üí p) ‚Üí p :=
or.elim


/-! ### Restriction to (sub)sets -/

lemma is_local_min.on (h : is_local_min f a) (s) : is_local_min_on f a s :=
h.filter_inf _

lemma is_local_max.on (h : is_local_max f a) (s) : is_local_max_on f a s :=
h.filter_inf _

lemma is_local_extr.on (h : is_local_extr f a) (s) : is_local_extr_on f a s :=
h.filter_inf _

lemma is_local_min_on.on_subset {t : set Œ±} (hf : is_local_min_on f a t) (h : s ‚äÜ t) :
  is_local_min_on f a s :=
hf.filter_mono $ nhds_within_mono a h

lemma is_local_max_on.on_subset {t : set Œ±} (hf : is_local_max_on f a t) (h : s ‚äÜ t) :
  is_local_max_on f a s :=
hf.filter_mono $ nhds_within_mono a h

lemma is_local_extr_on.on_subset {t : set Œ±} (hf : is_local_extr_on f a t) (h : s ‚äÜ t) :
  is_local_extr_on f a s :=
hf.filter_mono $ nhds_within_mono a h

lemma is_local_min_on.inter (hf : is_local_min_on f a s) (t) : is_local_min_on f a (s ‚à© t) :=
hf.on_subset (inter_subset_left s t)

lemma is_local_max_on.inter (hf : is_local_max_on f a s) (t) : is_local_max_on f a (s ‚à© t) :=
hf.on_subset (inter_subset_left s t)

lemma is_local_extr_on.inter (hf : is_local_extr_on f a s) (t) : is_local_extr_on f a (s ‚à© t) :=
hf.on_subset (inter_subset_left s t)

