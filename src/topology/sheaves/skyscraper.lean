variables {X : Top.{u}} (p‚ÇÄ : X) {C : Type v} [category.{u} C] (S : C) [has_terminal C]

lemma mem_nhds_of_not_mem_closure_singleton {y : X} (h : ¬¨p‚ÇÄ ‚§≥ y) :
  ‚àÉ (U : open_nhds y), p‚ÇÄ ‚àâ U.1 :=
begin
