-/
@[reducible]
noncomputable def skyscraper_presheaf_stalk_of_not_mem_closure‚ÇÄ [has_colimits C]
  {y : X} (h : ¬¨p‚ÇÄ ‚§≥ y) : (skyscraper_presheaf p‚ÇÄ S).stalk y ‚âÖ terminal C :=
