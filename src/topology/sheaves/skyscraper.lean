      eq_to_hom (if_neg (mem_nhds_of_not_mem_closure_singleton p‚ÇÄ h).some_spec) :=
    terminal_is_terminal.hom_ext _ _,
    erw [this, ‚Üêcategory.assoc, eq_to_hom_trans, eq_to_hom_refl, category.id_comp]
