lemma ball_subset_ball' {E : Type*} [normed_group E]
  (x y : E) (rx ry : ‚Ñù) (h : rx + dist x y ‚â§ ry) :
  ball x rx ‚äÜ ball y ry :=
begin
  assume z hz,
  calc dist z y ‚â§ dist z x + dist x y : dist_triangle _ _ _
  ... < rx + dist x y : add_lt_add_right hz _
  ... ‚â§ ry : h
end

