    { have A : tendsto (Œª n, ‚à•F (u (œÜ n)) i - F (u (œÜ n)) j‚à•) at_top (ùìù (‚à•f i - f j‚à•)) :=
        ((hf.apply i).sub (hf.apply j)).norm,
