lemma is_open_Union_countable [second_countable_topology Œ±]
  {Œπ} (s : Œπ ‚Üí set Œ±) (H : ‚àÄ i, is_open (s i)) :
  ‚àÉ T : set Œπ, countable T ‚àß (‚ãÉ i ‚àà T, s i) = ‚ãÉ i, s i :=
let ‚ü®B, cB, _, bB‚ü© := is_open_generated_countable_inter Œ± in
begin
