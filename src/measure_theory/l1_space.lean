protected lemma eq {f g : Œ± ‚Üí‚ÇÅ Œ≤} : (f : Œ± ‚Üí‚Çò Œ≤) = (g : Œ± ‚Üí‚Çò Œ≤) ‚Üí f = g := subtype.eq
@[elim_cast] protected lemma eq_iff {f g : Œ± ‚Üí‚ÇÅ Œ≤} : (f : Œ± ‚Üí‚Çò Œ≤) = (g : Œ± ‚Üí‚Çò Œ≤) ‚Üî f = g :=
iff.intro (l1.eq) (congr_arg coe)

