                map_comp' := begin intros X_1 Y Z f g, ext1, dsimp at *, erw [category.assoc] end,
                map_id' := begin intros X_1, ext1, dsimp at *, erw [category.id_comp] end },
  map' := Œª X X' f, { app := Œª Y g, g ‚â´ f } }

